{% extends 'layout.html.njk' %}

{% block aside_content %}
{% endblock aside_content %}

{% block content %}
  <h1>Hello EUMetSat !</h1>
  <p>
  <b>title:</b> {{ title }}
  </p>
  {% if error %}
    <div class="error">
      {{ error }}
    </div>
  {% endif %}

  <div id="eumetsat-videos">
  {% for file in videos_list %}
    <div>
      <video width="486" height="480" controls>
        <source src="{{ file.path }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </div>
  {% endfor %}
  </div>

  <div id="eumetsat-latest-images">
  {% for file in latest_images_list %}
    <div>
        <img src="{{ file.path }}" alt="file.fileName">
    </div>
  {% endfor %}
  </div>

  <hr>

  <ul>
  {% for file in images_list %}
    <li>
        <a href="{{ file.path }}">{{ file.fileName }}</a>
    </li>
  {% endfor %}
  </ul>
{% endblock content %}
